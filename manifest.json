{
  "name": "everyTable",
  "description": "everyTable",
  "version": "0.0.1",
  "permissions": ["activeTab", "storage"],
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Make this page red"
  },
  "content_scripts": [
    {
      "matches": ["https://everytime.kr/timetable*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["script.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_idle"
    }
  ]
}
